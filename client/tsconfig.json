{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "outFile": "types/app.js",
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2015", "DOM"],
    "target": "ES2015",
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "files": ["types/insula.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}