{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "noEmit": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["**/*.ts", "**/*.tsx"]
}